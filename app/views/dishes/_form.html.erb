<%= form_for dish do |f| %>

    <label>Category:</label>
    <%= f.collection_select :category_id, Category.all, :id, :category_name, include_blank: true%>
    <br>
    <label>Dish Name:</label>
    <%= f.text_field :name, class: "field_with_errors" %>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit %>

<%end%>
