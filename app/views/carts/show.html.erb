<h1>Carts#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>
<header class="break">
<h2><%= current_user.name %>'s Cart</h2>
</header>
<p><%= button_to "Back to Menu",dishes_path, method: :get %></p>
<ol>
    <% @cart.cart_items.each do |cart_item| %>
       <li>Item: <%= cart_item.dish.name %></li>
        Price: <%= cart_item.dish.price %> rs<br>
        Quantity: <%= cart_item.quantity %><br>
        Total Price: <%= cart_item.total_amount %> rs<br>
        <%= button_to "Add one", cart_item_add_path(:id => cart_item), method: :post %>
        <%= button_to "Reduce one", cart_item_reduce_path(:id => cart_item), method: :post %>
        <%= button_to "Remove item", cart_item_path(cart_item), method: :delete %>
        <br>
    <% end %>
</ol>
